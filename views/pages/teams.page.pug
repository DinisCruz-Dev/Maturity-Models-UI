.row
    div(ng-controller='TeamsController')
        div.callout.large.primary
            div.row.column(ng-cloak)
                h4 Current teams
                table
                    thead
                        th name
                        th(colspan=3).text-center action
                    tbody
                    tr(ng-repeat="(key, team) in teams.sort()")
                        td
                            span {{team}}
                        td
                            a(href='/view/{{project}}/{{team}}') view
                        td
                            a(href='/view/{{project}}/{{team}}/edit') edit
                        td
                            a(href='/view/{{project}}/{{team}}/raw') raw